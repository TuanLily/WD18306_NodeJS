<style>
  @keyframes gradientAnimation {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .section-background {
    background: linear-gradient(45deg, #b0b434, rgb(97, 255, 113));
    background-size: 200% 200%;
    animation: gradientAnimation 10s ease infinite;
  }

  .return-link {
    color: #333; /* Màu của liên kết */
    text-decoration: none; /* Xóa gạch chân của liên kết */
    transition: color 0.3s; /* Hiệu ứng chuyển đổi màu trong 0.3 giây */
  }
  .return-link:hover {
    color: rgb(236, 241, 86); /* Màu của liên kết khi hover */
  }
  .return-link i {
    margin-right: 5px; /* Khoảng cách giữa icon và văn bản */
  }
</style>

<section class="vh-100 section-background">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <!-- Thêm liên kết trở về vào đây -->
        <a href="/" class="return-link">
          <i class="fas fa-arrow-left"></i> Trở về
        </a>
        <!-- Kết thúc liên kết trở về -->
        <div class="card" style="border-radius: 1rem">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img
                src="../../../../public/client/images/blog-img.jpg"
                alt="login form"
                class="img-fluid"
                style="border-radius: 1rem 0 0 1rem; height: 80%"
              />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                <form action="/api/register" method="post" id="registerForm">
                  <div class="d-flex align-items-center mb-3 pb-1">
                    <img
                      src="../../../../public/client/images/favicon.ico"
                      alt="login form"
                      class="img-fluid"
                    />
                    <span class="h1 fw-bold mb-0">Freshshop</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px">
                    Đăng ký tài khoản
                  </h5>

                  <div
                    class="alert alert-danger errMsg"
                    id="errorMessage"
                    role="alert"
                  ></div>

                  <div class="form-outline mb-4">
                    <label class="form-label" for="fullnameInput"
                      >Họ và tên</label
                    >
                    <input
                      type="text"
                      name="fullname"
                      id="fullnameInput"
                      class="form-control form-control-lg"
                    />
                    <div class="fullnameError"></div>
                  </div>
                  <div class="form-outline mb-4">
                    <label class="form-label" for="emailInput">Email </label>
                    <input
                      type="email"
                      name="email"
                      id="emailInput"
                      class="form-control form-control-lg"
                    />
                    <div class="emailError"></div>
                  </div>

                  <div class="form-outline mb-4">
                    <label class="form-label" for="passwordInput"
                      >Mật khẩu</label
                    >
                    <input
                      type="password"
                      name="password"
                      id="passwordInput"
                      class="form-control form-control-lg"
                    />
                    <div class="passwordError"></div>
                  </div>
                  <div class="form-outline mb-4">
                    <label class="form-label" for="isPasswordInput"
                      >Mật khẩu xác nhận</label
                    >
                    <input
                      type="password"
                      name="isPassword"
                      id="isPasswordInput"
                      class="form-control form-control-lg"
                    />
                    <div class="isPasswordError"></div>
                  </div>

                  <div class="pt-1 mb-4">
                    <button
                      class="btn btn-dark btn-lg btn-block"
                      id="registerButton"
                      type="submit"
                    >
                      Đăng ký
                    </button>
                  </div>

                  <p class="mb-5 pb-lg-2" style="color: #393f81">
                    Bạn đã có tài khoản?
                    <a href="/login" style="color: #393f81"
                      >Đăng nhập tại đây</a
                    >
                  </p>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document
    .getElementById("registerForm")
    .addEventListener("submit", function (event) {
      event.preventDefault(); // Ngăn chặn gửi yêu cầu mặc định của form

      const fullname = document.getElementById("fullnameInput").value;
      const email = document.getElementById("emailInput").value;
      const password = document.getElementById("passwordInput").value;
      const isPassword = document.getElementById("isPasswordInput").value;

      let hasErr = false;

      function validateEmail(email) {
        const re = /\S+@\S+\.\S+/;
        return re.test(email);
      }

      // Hàm kiểm tra mật khẩu hợp lệ
      function validatePassword(password) {
        // Kiểm tra mật khẩu có ít nhất một số, một chữ cái viết hoa và một ký tự đặc biệt
        const regex =
          /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*()_+}{"':;?/>.<, ]).{6,}$/;
        return regex.test(password);
      }

      if (!fullname || !email || !password || !isPassword) {
        document.getElementById("errorMessage").innerText =
          "Vui lòng điền đầy đủ thông tin";
        document.getElementById("errorMessage").style.display = "block";
        hasErr = true;
        return; // Dừng tiến trình đăng ký nếu có lỗi
      }

      if (!validateEmail(email)) {
        document.getElementById("errorMessage").innerText =
          "Email không hợp lệ";
        document.getElementById("errorMessage").style.display = "block";
        hasErr = true;
        return;
      }
      if (password.length < 6) {
        document.getElementById("errorMessage").innerText =
          "Mật khẩu phải từ 6 ký tự";
        document.getElementById("errorMessage").style.display = "block";
        hasErr = true;
        return;
      } else if (!validatePassword(passwordInput.value)) {
        document.getElementById("errorMessage").innerText =
          "Mật khẩu phải chứa ít nhất một số, một chữ cái viết hoa và một ký tự đặc biệt";
        document.getElementById("errorMessage").style.display = "block";
        hasErr = true;
        return;
      }

      // Kiểm tra xem mật khẩu đã được xác nhận chính xác hay không
      if (password !== isPassword) {
        document.getElementById("errorMessage").innerText =
          "Mật khẩu xác nhận không khớp";
        document.getElementById("errorMessage").style.display = "block";
        hasErr = true;
        return; // Dừng tiến trình đăng ký nếu có lỗi
      }

      if (!hasErr) {
        axios
          .post("/api/register", {
            fullname: fullname,
            email: email,
            password: password,
            isPassword: isPassword,
          })
          .then((response) => {
            console.log(response.data);
            // Kiểm tra xem phản hồi có chứa lỗi không
            if (response.data.error) {
              // Hiển thị thông điệp lỗi trên giao diện
              document.getElementById("errorMessage").innerText =
                response.data.error;
              document.getElementById("errorMessage").style.display = "block";
            } else {
              window.location.replace("/login")
            }
          })
          .catch((error) => {
            // Xử lý lỗi từ máy chủ và hiển thị trên giao diện
            document.getElementById("errorMessage").innerText =
              "Có lỗi xảy ra khi đăng ký tài khoản: " + error.message;
            document.getElementById("errorMessage").style.display = "block";
          });
      }
    });
</script>
