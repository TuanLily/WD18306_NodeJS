<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
  <div class="row g-4">
    <div class="col-12">
      <a href="/admin/cateCreate" class="btn btn-primary m-2 float-end mt-3"
        ><i class="fa-solid fa-plus"></i> Thêm mới</a
      >
      <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Quản lý danh mục</h6>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Tên danh mục</th>

                <th scope="col" colspan="2">Hành động</th>
              </tr>
            </thead>
            <tbody id="categoriesTableBody">
              <% categories.forEach(category=> { %>
              <tr data-id="<%= category.id %>">
                <th scope="row"><%= category.id %></th>
                <td><%= category.name %></td>
                <td class="w-3">
                  <a
                    href="/admin/cateEdit/<%= category.id %>"
                    class="btn-edit mx-1"
                    data-id="<%= category.id %>"
                  >
                    <i class="fa-solid fa-pen-to-square"></i>
                  </a>
                  <a
                    href="/admin/cateDelete/<%= category.id %>"
                    class="btn-del"
                    data-id="<%= category.id %>"
                    data-title="<%= category.title %>"
                    onclick="return confirm(`Bạn có chắc chắn muốn xóa danh mục '<%= category.name %>' không?`)"
                  >
                    <i class="fa-solid fa-trash"></i>
                  </a>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Table End -->
